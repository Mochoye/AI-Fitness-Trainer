{
    "name": "Router Cross Chain Wallet Extension",
    "description" : "Cross Chain Wallet Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "index.html",
      "default_title": "Cross Chain Wallet Extension"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "//background": {
      "service_worker": "./static/js/background.js"
    },
    "//content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["./static/js/content.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "tabs", 
      "webNavigation",
      "storage"
    ],
    "optional_permissions": []
  }
  